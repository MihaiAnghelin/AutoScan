<div id="page">

    <div id="menu-main" data-menu-load="/menu-main.html" class="menu menu-box-left" data-menu-active="nav-pages" data-menu-effect="menu-reveal" data-menu-width="300"></div>
    <div id="menu-highlight" data-menu-load="/menu-highlights.html" class="menu menu-box-bottom" data-menu-height="390">    </div>
    <div id="menu-contact" data-menu-load="/menu-contact.html" class="menu menu-box-right" data-menu-effect="menu-reveal" data-menu-width="300"></div>

    <div class="page-content">

        <div class="card bg-19" data-card-height="cover">
            <div class="card-top pt-3 pl-3">
                <a href="#" data-back-button class="font-14 color-white"><i class="fa fa-arrow-left pr-2"></i>Înapoi</a>
            </div>
            <div class="card-center">
                <div class="mx-4">
                    <h1 class="font-800 mb-n1 color-white font-29">Autentificare</h1>
                    <p class="color-highlight font-11">Autentifica-te!</p>

                    <div class="input-style has-icon input-light input-style-1 input-required pb-1">
